#!/bin/bash

classes=(DAW Project Track Playlist Send)
classes+=(AudioEngine BufferManager AudioBuffer MessageQueue)
classes+=(web/Server web/Connection web/Request)
classes+=(AudioFile OpenAudioFile WAVFile RIFF)
classes+=(JSONParser FieldParser Base64 Logger)
files=()
files+=(main.cpp)

for class in "${classes[@]}"; do
	files+=(${class}.h)
	files+=(${class}.cpp)
	done

files+=(Message.h AudioTypes.h Amp.h)
files+=(html/index.html html/dawlet.css html/dawlet.js)
files+=(Makefile edit-all)

$EDITOR "${files[@]}"

